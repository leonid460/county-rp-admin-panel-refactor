{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "outDir": "./build/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "target": "es6",
    "jsx": "react",
    "baseUrl": "src",
    "allowSyntheticDefaultImports": true
  },
  "include":[
    "./src/**/*",
    "src/",
    "src",
    "**/src/**/*.ts",
    "**/test/**/*.ts"
  ]
}
